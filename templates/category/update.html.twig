{% extends 'base.html.twig' %}

{% block title %}Edit {{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Category update</h1>
        {{ form_start(form, { action: url('category_update', {id: category.id}) }) }}
            {{ form_widget(form) }}
            <input type="submit" value="save" class="btn btn-primary" />
            <a href="{{ url('category_index') }}">categories list</a>
        {{ form_end(form) }}
    </div>
{% endblock %}