{% extends 'base.html.twig' %}

{% block title %}Create new category{% endblock %}

{% block body %}
    <div class="container">
        <h1>Category create</h1>
        {{ form_start(form, { method: 'POST', action: url('category_create') }) }}
            {{ form_widget(form) }}
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="{{ url('category_index') }}" class="btn btn-link">Category list</a>
        {{ form_end(form) }}
    </div>
{% endblock %}