{% extends 'base.html.twig' %}

{% block body %}
    <h2>Welcome</h2>
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.categories) }}
    {{ form_row(form.description) }}
    {# render each row and field in the embedded form, in this example it's rendering the experience (Exp) fiels as rows #}
    <div class="col-sm-8 col-sm-offset-2" id="images_list" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
        {% for row in form.images %}
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <strong>{{ row.vars.value.Filename }}</strong>
                </div>
                <div class="panel-body">
                    {{ form_row(row) }}
                </div>
            </div>
        {% endfor %}
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
    {{ form_end(form) }}
{% endblock %}
