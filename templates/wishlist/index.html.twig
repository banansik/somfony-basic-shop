{% extends 'base.html.twig' %}

{% block title %}
    Wishlist
{% endblock %}

{% block body %}
    <h1>Wishlist</h1>
    {% if products is defined and products|length %}
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>created_at</th>
                <th>updated_at</th>
                <th>name</th>
                <th>desc</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products%}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.createdAt|date('Y/m/d') }}</td>
                    <td>{{ product.updatedAt|date('Y/m/d') }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>
                        <a href="{{ url('product_show', {id: product.id}) }}">show</a>
                        <a href="{{ url('product_update', {id: product.id}) }}">update</a>
                        <a href="{{ url('wishlist_remove', {id: product.id}) }}">delete from wishlist</a>
                    </td>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ url('wishlist_remove_all') }}">Clear wishlist</a>
    {% else %}
        <p>
            Brak produkt√≥w
            <br>
            <a href="{{ url('product_index') }}">Look for smth...</a>
        </p>
    {% endif %}

{% endblock %}